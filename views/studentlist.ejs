<%- include ('./base/header.ejs') %>
<div class="container">
    <div class="alert mt-3">
        <div class="container table-responsive mt-5">
            <h2 class="text-center text-white  mb-3">Student List</h2>
            <table class="table table-bordered table-striped  table-sm text-center table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Roll No</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Father Name</th>
                        <th>Aadhar Card</th>
                        <th>Mobile Number</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    <% students.forEach(student => { %>
                        <tr>
                            <td ><%= student.rollNo %></td>
                            <td><%= student.firstName %></td>
                            <td><%= student.lastName %></td>
                            <td><%= student.fatherName %></td>
                            <td><%= student.adharCard %></td>
                            <td><%= student.mobileNumber %></td>
                            <td>
                                <a href="/edit/student/page/<%= student._id %>" class="btn btn-info w-75">Edit</a>
                                <a href="/delete/student/<%= student._id %>" class="btn btn-danger mt-3 w-75">Delete</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
            <a href="/" class="btn btn-primary">Add New Student</a>
        </div>
    </div>
</div>
<%- include ("./base/footer.ejs") %>